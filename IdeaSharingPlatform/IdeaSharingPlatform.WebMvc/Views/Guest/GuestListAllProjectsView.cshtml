
@model IEnumerable<IdeaSharingPlatform.Models.Concretes.Projects>

@{
    ViewBag.Title = "GuestListAllProjectsView";
}


<!DOCTYPE html>

<html lang="tr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Anasayfa</title>
    <link rel="stylesheet" href="~/Scripts/Templates/StyleSheet2.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        h3.indent {
            padding-left: 25em;
        }

        /* Scrollbar styles */
        ::-webkit-scrollbar {
            width: 20px;
            height: 12px;
        }

        ::-webkit-scrollbar-track {
            border: 1px solid;
            border-color: #288f92;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: #288f92;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #88ba1c;
            }
    </style>
</head>
<body>
    <div class="topnav">
        <a href="#news">Bize Ulaşın</a>
        <a href="#contact">Ayarlar</a>
        <a href="#about">Arama</a>
    </div>
    <h1 class="pagename" style="font-size: 35px;">Idealand</h1>
    <h2 class="pagename" style="color:rgb(25, 31, 23);font-size: 20px;">Hosgeldiniz</h2>
    @using (Html.BeginForm("GuestMainPageView", "Guest", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="animate__animated animate__fadeIn" style="display: flex;">
            <div class="container" style="width: 1500px; height: 10000px; overflow: auto;">
                <h1>Projeler</h1>

                @foreach (var item in Model)
                {
                 <div class="container">
                    <div style="display: flex;">
                        <h3>
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </h3>
                        <h5 style="color: rgb(90, 90, 90) ; padding-left:15px;">
                            @Html.DisplayFor(modelItem => item.ProjectCreationDate)
                        </h5>
                        <h3 class="indent">
                            Yayınlayan
                            @Html.DisplayFor(modelItem => item.ProjectOwner.UserUsername)

                            @Html.DisplayFor(modelItem => item.ProjectsCategory)

                        </h3>

                    </div>
                    <p>
                        @Html.DisplayFor(modelItem => item.ProjectBlurb)
                        @Html.DisplayFor(modelItem => item.Description)

                    </p>
                    <div class="container">
                        Yorumlar
                        @foreach (var comm in item.ProjectsComments)
                        {
                            <div class="container">

                                <h3 style="border:thin">
                                    @Html.DisplayFor(modelItem => comm.CommentedUser.UserUsername)
                                    @Html.DisplayFor(modelItem => comm.CommentedUser.UserEmail)
                                    @Html.DisplayFor(modelItem => comm.CommentDate)
                                    @Html.DisplayFor(modelItem => comm.CommentDescription)
                                </h3>
                            </div> 
                        }
                     </div>
                 </div>
                 <br>
                }

            </div>
        </div>
    }
    </body>
</html>
